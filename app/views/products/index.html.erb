<div class="row">
  <div class="col-md-12">
    <div class="row">
      <% @products.in_groups_of(3, false) do |products| %>
        <% products.each do |p| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <%= image_tag p.images.first.file.url %>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= p.name %></a>
              </h4>
              <h5>$<%= p.price %></h5>
            </div>
            <div class="card-footer">
              <%= link_to "ADD TO CART", add_to_cart_path(product_id: p.id), class: 'btn btn-primary', remote: true %>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
